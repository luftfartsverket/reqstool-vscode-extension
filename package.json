{
    "name": "reqstool-vscode-extension",
    "displayName": "Reqstool",
    "description": "Provides Reqstool support",
    "version": "0.2.3",
    "publisher": "LFV",
    "repository": {
        "type": "git",
        "url": "https://github.com/Luftfartsverket/reqstool-vscode-extension"
    },
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/requirements.yml"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "test-with-report": "vscode-test",
        "clean": "rimraf out",
        "build": "rimraf out && vsce package"
    },
    "devDependencies": {
        "@types/mocha": "10.0.10",
        "@types/node": "22.15.31",
        "@types/vscode": "1.95.0",
        "@typescript-eslint/eslint-plugin": "8.34.0",
        "@typescript-eslint/parser": "8.34.0",
        "@vscode/test-cli": "0.0.11",
        "@vscode/test-electron": "2.5.2",
        "@vscode/vsce": "3.3.2",
        "eslint": "9.28.0",
        "mocha-junit-reporter": "^2.2.1",
        "rimraf": "6.0.1",
        "typescript": "5.9.2"
    },
    "dependencies": {
        "vscode-uri": "3.1.0"
    }
}
