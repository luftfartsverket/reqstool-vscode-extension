{
    "name": "reqstool-vscode-extension",
    "displayName": "Reqstool",
    "description": "Provides Reqstool support",
    "version": "0.2.0",
    "publisher": "LFV",
    "repository": {
        "type": "git",
        "url": "https://github.com/Luftfartsverket/reqstool-vscode-extension"
    },
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/requirements.yml"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "test-with-report": "vscode-test",
        "clean": "rimraf out",
        "build": "rimraf out && vsce package"
    },
    "devDependencies": {
        "@types/mocha": "10.0.6",
        "@types/node": "20.12.7",
        "@types/vscode": "^1.54.0",
        "@typescript-eslint/eslint-plugin": "7.9.0",
        "@typescript-eslint/parser": "7.7.1",
        "@vscode/test-cli": "0.0.9",
        "@vscode/test-electron": "2.3.9",
        "@vscode/vsce": "2.26.0",
        "eslint": "8.57.0",
        "mocha-junit-reporter": "^2.2.1",
        "rimraf": "5.0.5",
        "typescript": "5.4.5"
    },
    "dependencies": {
        "vscode-uri": "3.0.8"
    }
}
